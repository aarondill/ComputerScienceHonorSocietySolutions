{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "declarationDir": "types",
    "declaration": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"]
}
